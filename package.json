{
    "name": "obsidian-notes",
    "version": "1.0.0",
    "description": "从 macOS 备忘录同步笔记到 Obsidian 仓库的备忘录文件夹",
    "main": "main.js",
    "scripts": {
        "build": "node esbuild.config.mjs production && cp manifest.json dist/",
        "dev": "node esbuild.config.mjs",
        "deploy": "node deploy.mjs",
        "build-deploy": "npm run build && node deploy.mjs",
        "release": "node release.mjs"
    },
    "keywords": [
        "obsidian",
        "notes",
        "sync",
        "macos",
        "备忘录"
    ],
    "author": "Your Name",
    "license": "MIT",
    "devDependencies": {
        "@types/node": "^20.10.0",
        "@types/turndown": "^5.0.4",
        "builtin-modules": "^3.3.0",
        "esbuild": "^0.12.26",
        "obsidian": "^1.4.16",
        "tslib": "^2.6.2",
        "typescript": "^4.3.2"
    },
    "dependencies": {
        "jsdom": "^26.1.0",
        "turndown": "^7.2.2",
        "turndown-plugin-gfm": "^1.0.2"
    }
}
