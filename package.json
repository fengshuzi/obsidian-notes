{
  "name": "obsidian-notes",
  "version": "1.0.0",
  "description": "多源 Markdown 笔记同步到 Obsidian，当前支持 Joplin，后续支持思源等",
  "main": "main.js",
  "scripts": {
    "dev": "node esbuild.config.mjs",
    "build": "tsc -noEmit -skipLibCheck && node esbuild.config.mjs production",
    "deploy": "npm run build && node deploy.mjs",
    "release": "node release.mjs"
  },
  "keywords": [
    "obsidian",
    "notes",
    "joplin",
    "sync",
    "import",
    "siyuan"
  ],
  "author": "lizhifeng",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^16.11.6",
    "@types/sql.js": "^1.4.9",
    "@types/turndown": "^5.0.6",
    "@typescript-eslint/eslint-plugin": "^5.29.0",
    "@typescript-eslint/parser": "^5.29.0",
    "builtin-modules": "^3.3.0",
    "esbuild": "0.17.3",
    "obsidian": "latest",
    "tslib": "2.4.0",
    "typescript": "4.7.4"
  },
  "dependencies": {
    "sql.js": "^1.8.0",
    "turndown": "^7.2.2",
    "turndown-plugin-gfm": "^1.0.2"
  }
}
